@page
@model Smart.Design.Razor.Showcase.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="c-design-system-home-hero u-padding-vertical-xl">
            <div class="o-grid">
                <div class="o-grid-col-bp3-6">
                    <div class="o-flex o-flex u-spacer-right-xl o-flex--vertical-center" style="height: 100%;">
                        <div class="c-display u-spacer-right-xl">
                            <h1>Build and design with Smart’s <i>Design Library</i></h1>
                            <p class="u-spacer-right-xl">Create the best Smart experiences using reusable building blocks, built by and for the community.</p>
                            <div class="u-spacer-top">
                                <div class="c-alert c-alert--default">
                                    <div class="o-svg-icon o-svg-icon-circle-information  ">
                                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M12 4C7.58172 4 4 7.58172 4 12C4 16.4183 7.58172 20 12 20C16.4183 20 20 16.4183 20 12C20 7.58172 16.4183 4 12 4ZM2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22C6.47715 22 2 17.5228 2 12Z" fill="#595959" />
