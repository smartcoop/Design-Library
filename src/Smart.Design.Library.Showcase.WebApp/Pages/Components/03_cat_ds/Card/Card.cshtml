@page
@model Smart.Design.Library.Showcase.Pages.Components.Card.Card
@{
    ViewData["MainTitle"] = "Components documentation";
    ViewData["ComponentTitle"] = "Card";
}

<div class="u-padding-bottom-l">
    <h1 class="c-h2">@ViewData["MainTitle"]</h1>
</div>


<div class="o-grid">
    @await Html.PartialAsync("Shared/_ComponentList")
    <div class="o-grid-col-bp3-9">
        <div class="br-componentgroup-header-wrapper">
            <h1 class="br-componentgroup-header c-h2">@ViewData["ComponentTitle"]</h1>
            <p><b>Status:</b> complete</p>
        </div>
        <div class="br-content c-content">
        </div>
        <div class="br-sample" id="component-01-card">
            <div class="br-sample-header br-sample-clearfix">
                <h3 class="br-sample-heading c-h3">Card</h3>
                <a class="br-sample-header-link" href="#component-01-card">#</a>
            </div>
            <div class="br-sample-documentation c-content"></div>
            <div class="br-sample-content">
                <div class="c-card">
                    <div class="c-card__body">
                        <h4 class="c-card__title">Card title</h4>
                        <p class="u-text-muted"> Subline</p>
                    </div>
                </div>
            </div>
            <div class="br-sample-footer">
                <b>HTML Code: </b>
                <pre class="br-sample-markup br-sample-markup-html">
@("<div class=\"c-card\">")
    @("<div class=\"c-card__body\">")
        @("<h4 class=\"c-card__title\">Card title</h4>")
        @("<p class=\"u-text-muted\"> Subline</p>")
    @("</div>")
@("</div>")</pre>
            </div>
        </div>
        <div class="br-sample" id="component-02-card">
            <div class="br-sample-header br-sample-clearfix">
                <h3 class="br-sample-heading c-h3">Card User</h3>
                <a class="br-sample-header-link" href="#component-02-card">#</a>
            </div>
            <div class="br-sample-documentation c-content"></div>
            <div class="br-sample-content">
                <a class="c-card" href="#">
                    <div class="c-card__body">
                        <div class="c-avatar-and-text">
                            <div class="c-avatar c-avatar--medium">
                                <div class="o-svg-icon o-svg-icon-user o-svg-icon--undefined ">
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M12 4C9.79086 4 8 5.79086 8 8C8 10.2091 9.79086 12 12 12C14.2091 12 16 10.2091 16 8C16 5.79086 14.2091 4 12 4ZM6 8C6 4.68629 8.68629 2 12 2C15.3137 2 18 4.68629 18 8C18 11.3137 15.3137 14 12 14C8.68629 14 6 11.3137 6 8ZM8 18C6.34315 18 5 19.3431 5 21C5 21.5523 4.55228 22 4 22C3.44772 22 3 21.5523 3 21C3 18.2386 5.23858 16 8 16H16C18.7614 16 21 18.2386 21 21C21 21.5523 20.5523 22 20 22C19.4477 22 19 21.5523 19 21C19 19.3431 17.6569 18 16 18H8Z" fill="#595959"></path>
                                    </svg>
                                </div>
                            </div>
                            <div class="c-avatar-and-text__text">
                                <h4 class="c-avatar-and-text__title">Team member</h4>
                                <p class="u-text-muted">Role</p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="br-sample-footer">
                <b>HTML Code: </b>
                <pre class="br-sample-markup br-sample-markup-html">
@("<a class=\"c-card\" href=\"#\">")
    @("<div class=\"c-card__body\">")
        @("<div class=\"c-avatar-and-text\">")
            @("<div class=\"c-avatar c-avatar--medium\">")
                @("<div class=\"o-svg-icon o-svg-icon-user o-svg-icon--undefined \">")
                    @("<svg width=\"24\" height=\"24\" viewBox=\"0 0 24 24\" fill=\"none\" xmlns=\"http://www.w3.org/2000/svg\">")
                        @("<path d=\"M12 4C9.79086 4 8 5.79086 8 8C8 10.2091 9.79086 12 12 12C14.2091 12 16 10.2091 16 8C16 5.79086 14.2091 4 12 4ZM6 8C6 4.68629 8.68629 2 12 2C15.3137 2 18 4.68629 18 8C18 11.3137 15.3137 14 12 14C8.68629 14 6 11.3137 6 8ZM8 18C6.34315 18 5 19.3431 5 21C5 21.5523 4.55228 22 4 22C3.44772 22 3 21.5523 3 21C3 18.2386 5.23858 16 8 16H16C18.7614 16 21 18.2386 21 21C21 21.5523 20.5523 22 20 22C19.4477 22 19 21.5523 19 21C19 19.3431 17.6569 18 16 18H8Z\" fill=\"#595959\"></path>")
                    @("</svg>")
                @("</div>")
            @("</div>")
            @("<div class=\"c-avatar-and-text__text\">")
                @("<h4 class=\"c-avatar-and-text__title\">Team member</h4>")
                @("<p class=\"u-text-muted\">Role</p>")
            @("</div>")
        @("</div>")
    @("</div>")
@("</a>")</pre>
            </div>
        </div>
        <div class="br-sample" id="component-03-card">
            <div class="br-sample-header br-sample-clearfix">
                <h3 class="br-sample-heading c-h3">Card image</h3>
                <a class="br-sample-header-link" href="#component-03-card">#</a>
            </div>
            <div class="br-sample-documentation c-content"></div>
            <div class="br-sample-content">
                <a class="c-card" href="#">
                    <div class="c-card__img"><img src="https://via.placeholder.com/1600x900" alt="Alt text"></div>
                    <div class="c-card__body">
                        <h4 class="c-card__title">Card title</h4>
                        <p class="u-text-muted">Subtitle</p>
                    </div>
                </a>
            </div>
            <div class="br-sample-footer">
                <b>HTML Code: </b>
                <pre class="br-sample-markup br-sample-markup-html">
@("<div class=\"c-card\">")
    @("<div class=\"c-card__body\">")
        @("<div class=\"c-card__img\"><img src=\"https://via.placeholder.com/1600x900\" alt=\"Alt text\"></div>")
        @("<h4 class=\"c-card__title\">Card title</h4>")
        @("<p class=\"u-text-muted\"> Subline</p>")
    @("</div>")
@("</div>")</pre>
            </div>
        </div>
        <div class="br-sample" id="component-04-card">
            <div class="br-sample-header br-sample-clearfix">
