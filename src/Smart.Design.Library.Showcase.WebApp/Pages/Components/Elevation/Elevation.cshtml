@page
@model Smart.Design.Library.Showcase.Pages.Components.Elevation.Elevation
@{
    ViewData["MainTitle"] = "Components documentation";
    ViewData["ComponentTitle"] = "Elevation";
}

<div class="u-padding-bottom-l">
    <h1 class="c-d-h2">@ViewData["MainTitle"]</h1>
</div>


<div class="o-grid">
    @await Html.PartialAsync("Shared/_ComponentList")
    <div class="o-grid-col-bp3-9">
        <div class="br-componentgroup-header-wrapper">
            <h1 class="br-componentgroup-header c-d-h2">@ViewData["ComponentTitle"]</h1>
        </div>

        <div class="br-content c-content">
            <p>Documentation for Elevation</p>
        </div>

        <div class="br-sample" id="component-01-elevation-small">

            <div class="br-sample-header br-sample-clearfix">
                <h3 class="br-sample-heading c-h3">Small shadow</h3>
            </div>

            <div class="br-sample-documentation c-content"></div>

            <div class="br-sample-content">
                <smart-elevation elevation="Small">I am a box with a small shadow.</smart-elevation>
            </div>

            <div class="br-sample-footer">
                <b>C# Code: </b>
                <pre class="br-sample-markup br-sample-markup-csharp">@("<smart-elevation elevation=\"Small\">I am a box with a small shadow.</smart-elevation>")</pre>
            </div>

        </div>

        <div class="br-sample" id="component-02-elevation-medium">

            <div class="br-sample-header br-sample-clearfix">
                <h3 class="br-sample-heading c-h3">Medium shadow</h3>
            </div>

            <div class="br-sample-documentation c-content"></div>

            <div class="br-sample-content">
                <smart-elevation elevation="Medium">I am a box with a medium shadow.</smart-elevation>
            </div>

            <div class="br-sample-footer">
                <b>C# Code: </b>
                <pre class="br-sample-markup br-sample-markup-csharp">@("<smart-elevation elevation=\"Medium\">I am a box with a medium shadow.</smart-elevation>")</pre>
            </div>

        </div>

        <div class="br-sample" id="component-03-elevation-large">

            <div class="br-sample-header br-sample-clearfix">
                <h3 class="br-sample-heading c-h3">Large shadow</h3>
            </div>

            <div class="br-sample-documentation c-content"></div>

            <div class="br-sample-content">
                <smart-elevation elevation="Large">I am a box with a large shadow.</smart-elevation>
            </div>

            <div class="br-sample-footer">
                <b>C# Code: </b>
                <pre class="br-sample-markup br-sample-markup-csharp">@("<smart-elevation elevation=\"Large\">I am a box with a large shadow.</smart-elevation>")</pre>
            </div>

        </div>
    </div>
</div>
