@page
@model Smart.Design.Library.Showcase.Pages.Components.Box.Box
@{
    ViewData["MainTitle"] = "Components documentation";
    ViewData["ComponentTitle"] = "Box";
}

<div class="u-padding-bottom-l">
    <h1 class="c-d-h2">@ViewData["MainTitle"]</h1>
</div>


<div class="o-grid">
    @await Html.PartialAsync("Shared/_ComponentList")
    <div class="o-grid-col-bp3-9">
        <div class="br-componentgroup-header-wrapper">
            <h1 class="br-componentgroup-header c-d-h2">@ViewData["ComponentTitle"]</h1>
        </div>
        <div class="br-content c-content">
            <p>
                Documentation for Box
                <ul>
                    <li>The label for the title</li>
                    <li>The title</li>
                    <li>A subtitle (optional)</li>
                    <li>A Dictionnary of labels and values for the content of the box</li>
                </ul>
            </p>
        </div>
        <div class="br-sample" id="component-01-c-button-primary">
            <div class="br-sample-header br-sample-clearfix">
                <h3 class="br-sample-heading c-h3">Box</h3>
            </div>
            <div class="br-sample-documentation c-content"></div>
            <div class="br-sample-content">
                @{
                    Dictionary<string, string> LabelsAndValues = new Dictionary<string, string>
                    {
                        {
                            "Titulaire: ", "678362 - John Doe"
                        }
                    };
                }
                <smart-box title-label="Référence: " title="9823109831"
                           subtitle="Expérience activités lorem ipsum CDI" labels-and-values="@LabelsAndValues"></smart-box>
            </div>
            <div class="br-sample-footer">
                 <b>C# Code: </b>
                <pre class="br-sample-markup br-sample-markup-csharp">@("<smart-box title-label=\"Référence: \" title=\"9823109831\" subtitle=\"Expérience activités lorem ipsum CDI\" labels-and-values=\"@LabelAndValue\"></smart-box>")</pre>
            </div>
            <div class="br-componentgroup-footer-wrapper">
                <h1 class="br-componentgroup-footer c-d-h2">Possible parameters for box</h1>
                <div class="br-content c-content">
                    <table class="c-table">
                        <thead>
                            <tr>
                                <th>Parameters</th>
                                <th>Type</th>
                                <th>Possible values</th>
                                <th>Descriptions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>TitleLabel *</td>
                                <td>string</td>
                                <td></td>
                                <td>The label for the title</td>
                            </tr>
                            <tr>
                                <td>Title *</td>
                                <td>string</td>
                                <td></td>
                                <td>The box title</td>
                            </tr>
                            <tr>
                                <td>Subtitle</td>
                                <td>string</td>
                                <td></td>
                                <td>The subtitle</td>
                            </tr>
                            <tr>
                                <td>LabelsAndValues *</td>
                                <td>Dictionary string, string</td>
                                <td></td>
                                <td>Represents the content</td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
