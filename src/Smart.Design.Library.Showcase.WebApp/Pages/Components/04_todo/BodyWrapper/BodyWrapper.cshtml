@page
@model Smart.Design.Library.Showcase.Pages.Components.BodyWrapper.BodyWrapper
@{
    ViewData["MainTitle"] = "Components documentation";
    ViewData["ComponentTitle"] = "Body wrapper";
}

<div class="u-padding-bottom-l">
    <h1 class="c-h2">@ViewData["MainTitle"]</h1>
    <p><b>Status:</b> Unclear ?</p>
</div>


<div class="o-grid">
    @await Html.PartialAsync("Shared/_ComponentList")
    <div class="o-grid-col-bp3-9">
        <div class="br-componentgroup-header-wrapper">
            <h1 class="br-componentgroup-header c-h2">@ViewData["ComponentTitle"]</h1>
        </div>
        <div class="br-content c-content">
            <p>Is it still usefull to keep a taghelper for this or do we keep using raw html ?</p>
        </div>
        <div class="br-sample" id="component-01-c-bodyWrapper">
            <div class="br-sample-header br-sample-clearfix">
                <h3 class="br-sample-heading c-h3">Body wrapper</h3>
            </div>
            <div class="br-sample-documentation c-content"></div>
            <div class="br-sample-content">
                <smart-body-wrapper>test</smart-body-wrapper>
            </div>
            <div class="br-sample-footer">
                <b>C# Code: </b>
                <pre class="br-sample-markup br-sample-markup-csharp">@("<smart-body-wrapper>test</smart-body-wrapper>")</pre>
            </div>
        </div>
    </div>
</div>
