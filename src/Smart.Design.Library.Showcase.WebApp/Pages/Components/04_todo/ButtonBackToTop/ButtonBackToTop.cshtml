@page
@model Smart.Design.Library.Showcase.Pages.Components.ButtonBackToTop.ButtonBackToTop
@{
    ViewData["MainTitle"] = "Components documentation";
    ViewData["ComponentTitle"] = "Button back to top";
}

<div class="u-padding-bottom-l">
    <h1 class="c-d-h2">@ViewData["MainTitle"]</h1>
</div>


<div class="o-grid">
    @await Html.PartialAsync("Shared/_ComponentList")
    <div class="o-grid-col-bp3-9">
        <div class="br-componentgroup-header-wrapper">
            <h1 class="br-componentgroup-header c-d-h2">@ViewData["ComponentTitle"]</h1>
            <p><b>Status:</b> Complete</p>
        </div>
        <div class="br-content c-content">
            <p>This component needs <i>bundle-client-min.js</i> script to go back to top when clicking</p>
        </div>
        <div class="br-sample" id="component-01-c-button-back-to-top">
            <div class="br-sample-header br-sample-clearfix">
                <h3 class="br-sample-heading c-h3">Button back to top</h3>
            </div>
            <div class="br-sample-documentation c-content"></div>
            <div class="br-sample-content">
                <smart-button-back-to-top label="Back to top of the page"></smart-button-back-to-top>
            </div>
            <div class="br-sample-footer">
                <b>C# Code: </b>
                <pre class="br-sample-markup br-sample-markup-csharp">@("<smart-button-back-to-top label=\"Back to top of the page\"></smart-button-back-to-top>")</pre>
            </div>
        </div>
    </div>
</div>
